<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.PreRivalWorkoutActivity">

    <EditText
            android:text="0"
            android:textAlignment="center"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:maxLength="1"
            android:id="@+id/pace_field"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="250dp"
            android:textSize="120sp"/>
    <Button
            android:text="@string/pre.rival.workout.start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pre_workout_start_workout"
            app:layout_constraintTop_toBottomOf="@+id/pace_field"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="150dp"/>
    <TextView
            android:text="@string/pre.rival.workout.pace"
            android:textSize="32sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/pace_field"
            app:layout_constraintBottom_toTopOf="@+id/pre_workout_start_workout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
    />
    <TextView
            android:text="@string/pre.rival.workout.pace.unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="340dp"
            android:textSize="36sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="25dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
